<div class="my-6">
  <%= render "railsui/shared/sticky_subhead", title: "Images", subtitle: "Responsive images" %>

  <div class="prose dark:!prose-invert mb-6">
    <p>Display images that scale proportionally relative to browser widths.</p>
  </div>

  <img src="https://source.unsplash.com/random/1600x900?dog" class="max-w-full h-auto">
</div>

<%# .html %>
<% content_for :html, flush: true do %>
  <img src="#" class="max-w-full h-auto">
<% end %>

<%# .erb %>
<% content_for :erb, flush: true do %>
  <%%= image_tag "...", class: "max-w-full", alt:"..." %>
<% end %>

<%# .haml %>
<% content_for :haml, flush: true do %>
  %img.max-w-full{:alt => "...", :src => "..."}
<% end %>
<%= render_snippet %>

<div class="my-16">
  <%= render "railsui/shared/sticky_subhead", title: "Images - Object Fit", subtitle: "Object Cover" %>

<div class="prose dark:!prose-invert mb-6 max-w-full">
  <p>Resize an element's content to cover it's container using <%= code(".object-cover") %></p>
</div>

<div class="bg-slate-50 flex items-center justify-center p-6 rounded-lg border border-slate-200 dark:bg-slate-700 dark:border-slate-600">
