<div class="px-4 -mx-4 py-1 mb-4 bg-white flex items-center justify-between dark:bg-slate-900 dark:text-slate-100">
  <div class="flex-1">
    <p class="text-sm text-slate-600 dark:text-slate-200"><%= local_assigns[:title].html_safe %></p>
    <%= heading id: ("#{local_assigns[:title]}-#{local_assigns[:subtitle]}").parameterize, text: local_assigns[:subtitle], class: "text-slate-900 text-2xl font-bold dark:text-white scroll-mt-20 tracking-tight" %>
    <div class="prose dark:prose-invert">
      <%= yield %>
    </div>
  </div>

  <% if local_assigns[:preview_link] %>
    <%= link_to "Preview", local_assigns[:preview_link], class: "px-4 py-2 text-white bg-gradient-to-br from-indigo-800 via-indigo-600 to-salmon-500 font-semibold text-center rounded transform shadow inline-block hover:bg-gradient-to-tl hover:-translate-y-px transition ease-in-out duration-300 text-[15px]", target: :_blank %>
  <%end %>
</div>
