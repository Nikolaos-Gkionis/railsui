<% content_for :noscroll, true %>

<div class="grid grid-cols-1 lg:grid-cols-12 lg:gap-10 items-start" data-configuration-target="submitContainer">
  <div class="lg:col-span-4">
  </div>
  <div class="lg:col-span-8">

    <% if Railsui.config.theme.present? %>
      <%= f.button "Save changes", id: "config_button", class: "px-5 py-3 text-white bg-gradient-to-br from-indigo-800 via-indigo-600 to-salmon-500 font-semibold text-center rounded transform shadow inline-block hover:bg-gradient-to-tl hover:-translate-y-px transition ease-in-out duration-300 !important w-full sticky", data: {configuration_target: "submit" } %>
    <% else %>
      <%= hidden_field_tag :button_clicked, "config_button_first_install", id: "button_clicked" %>
      <%= f.button "Install theme and save changes", id: "config_button_first_install", class: "px-5 py-3 text-white bg-gradient-to-br from-indigo-800 via-indigo-600 to-salmon-500 font-semibold text-center rounded transform shadow inline-block hover:bg-gradient-to-tl hover:-translate-y-px transition ease-in-out duration-300 !important w-full sticky", data: {configuration_target: "submit" }, name: "first_install" %>
    <% end %>

    <p class="text-sm mt-3 text-slate-500 dark:text-slate-300">Saving will automatically restart your app and install any dependencies.</p>
  </div>
</div>
